{
  "name": "Chrome Extension Webpack",
  "options_page": "options.html",
  "background": {
    "scripts": [ "background.bundle.js" ]
   },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"]
    }
  ], 
  "permissions": [
    "<all_urls>",
    "notifications"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
